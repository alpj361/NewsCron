# Configuración del NewsCron mejorado para Guatemala

# === SUPABASE CONFIGURATION ===
SUPABASE_URL=https://qqshdccpmypelhmyqnut.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here

# === API CONFIGURATION ===
# URL base de tu ExtractorT/ExtractorW API
API_BASE_URL=http://localhost:8000

# === OPENAI CONFIGURATION ===
# API Key de OpenAI para análisis de sentimientos
OPENAI_API_KEY=your_openai_api_key_here

# === SENTIMENT ANALYSIS SETTINGS ===
# Habilitar/deshabilitar análisis de sentimientos (true/false)
ENABLE_SENTIMENT_ANALYSIS=true

# === MODELO Y COSTOS ===
# Costo por 1M tokens para GPT-4 Turbo (USD)
# Actualizar según precios actuales de OpenAI
OPENAI_GPT4_TURBO_COST_PER_1M=30.00

# === CONFIGURACIÓN DE EXTRACCIÓN ===
# Ubicación por defecto para tendencias
DEFAULT_LOCATION=guatemala

# === LOGGING CONFIGURATION ===
# Nivel de logging (debug, info, warn, error)
LOG_LEVEL=info

# === FILTROS DE CONTENIDO ===
# Filtrar contenido en idiomas no deseados (true/false)
FILTER_NON_GUATEMALAN_CONTENT=true

# Palabras clave mínimas requeridas para relevancia
MIN_RELEVANCE_SCORE=0.3

# === RATE LIMITING ===
# Pausa entre tweets (ms) para evitar rate limiting
TWEET_PROCESSING_DELAY=500

# Pausa entre trends (ms)
TREND_PROCESSING_DELAY=2000

# === CONFIGURACIÓN AVANZADA ===
# Número máximo de tweets por trend
MAX_TWEETS_PER_TREND=10

# Timeout para requests HTTP (ms)
HTTP_TIMEOUT=30000

# === CONFIGURACIÓN DE REINTENTO ===
# Número máximo de reintentos para requests fallidos
MAX_RETRIES=3

# Delay base para reintentos (ms)
RETRY_BASE_DELAY=1000

